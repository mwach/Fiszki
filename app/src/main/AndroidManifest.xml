<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobica.mawa.fiszki">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/FiszkiTheme">

        <activity
            android:name=".MainScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".quiz.QuizActivity"
            android:label="@string/title_activity_quiz"
            android:theme="@style/FiszkiTheme"></activity>
        <activity
            android:name=".reporsitory.RepositoryActivity"
            android:label="@string/available_dictionaries"
            android:theme="@style/FiszkiTheme"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"></activity>
    </application>

</manifest>
