<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobica.mawa.fiszki.reporsitory.DictionariesListFragment"
    android:orientation="vertical"
    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/available_dictionaries"
        android:textSize="@dimen/activity_word_small_size"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >

        <TableRow android:layout_gravity="center">
            <TextView android:layout_weight="6"
                android:layout_height="wrap_content"
                android:text="@string/dictionary"
                android:textStyle="bold"
                android:textSize="@dimen/activity_word_small_size"
                />
        </TableRow>

        <TableRow android:layout_gravity="center">
            <Button
                android:id="@+id/dictEngPlnTextView"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/eng_pln"
                android:onClick="onClick"
                android:textSize="@dimen/activity_word_small_size"/>
            <ImageButton android:layout_weight="2"
                android:src="@drawable/remove"
                android:background="@null"
                android:layout_height="wrap_content"
                android:contentDescription="@string/remove"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:text="@string/add_dictionary"
        android:onClick="onClick"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/activity_word_small_size"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

</LinearLayout>
