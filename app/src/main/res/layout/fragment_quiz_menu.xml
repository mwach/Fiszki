<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:stretchColumns="0"
    tools:context="com.mobica.mawa.fiszki.quiz.QuizMenuFragment">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/quizMenuNumberOfQuestionsTextView"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="@string/number_of_questions" />

        <EditText
            android:id="@+id/editTextNoOfQuestions"
            android:layout_width="0px"
            android:layout_weight="1"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/quizMenuLanguageTextView"
            android:layout_width="0px"
            android:layout_weight="1"
            android:text="@string/dictionary" />

        <Spinner
            android:id="@+id/spinnerDictionaries"
            android:layout_width="0px"
            android:layout_weight="1" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Button
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:onClick="startQuiz"
            android:text="@string/start"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/activity_word_mid_size" />
    </TableRow>
</TableLayout>
