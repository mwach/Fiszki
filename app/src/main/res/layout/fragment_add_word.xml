<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobica.mawa.fiszki.reporsitory.AddWordFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/base_word" />

    <EditText
        android:id="@+id/baseWordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/base_word"
        android:inputType="text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ref_word" />

    <EditText
        android:id="@+id/refWordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ref_word"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_triple_vertical_margin"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/addWordConfirm"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@color/green"
            android:contentDescription="@string/quizKnownResponse"
            android:src="@drawable/ok" />

        <ImageButton
            android:id="@+id/addWordCancel"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:background="@color/red"
            android:contentDescription="@string/quizUnknownResponse"
            android:src="@drawable/cancel" />
    </LinearLayout>
</LinearLayout>
